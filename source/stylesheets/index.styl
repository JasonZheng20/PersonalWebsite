@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
    margin 0
    padding 0
    box-sizing border-box

    body
        font-family 'Source Code Pro', monospace

    .header
        height 325px

    .page-title
        font-weight 200
        font-size 80px
        text-align center
        padding-top 175px
        text-transform uppercase
        color #ff4d4d

    .nav
        background #ff4d4d
        height 125px
        text-align center

    .subtitle
        text-align center

    li
        display inline-block
        background url('https://images.unsplash.com/photo-1451337516015-6b6e9a44a8a3?crop=entropy&fit=crop&fm=jpg&h=975&ixjsv=2.1.0&ixlib=rb-0.3.5&q=80&w=1925')
        background-position center
        margin 5px 2.5px 5px 2.5px


    a
        color #fff
        padding-top 45px
        display inline-block
        height 115 px;
        width 115 px;
        text-decoration none

        &:hover
            background-color #ff4d4d
            color #fff

     .main-content
        margin 50px auto
        max-width 600px
        color #000

        p
            line-height 1.6
            margin-bottom 1.7em

    .footer
        margin 50px auto
        max-width 600px
        border-top 1px solid #444
        padding 20px 0

        p
            color #444
            font-size 12px
