@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
    margin 0
    padding 0
    box-sizing border-box

    body
        font-family 'Source Code Pro', monospace

    .header
        height 325px

     @keyframes fadein 
         from {opacity: 0; }
         to {opacity: 1;}

    .page-title
        font-weight 200
        font-size 80px
        text-align center
        padding-top 175px
        text-transform uppercase
        color #0066cc

    .nav
        background #1ac6ff
        height 125px
        text-align center
        animation: expand 0.75s;
        animation-delay: 0.75s;
        animation-fill-mode: forwards;
        margin 0px 0px  0px -4000px
        opacity 0

    @keyframes expand
        from {height: 0px; margin-top: 50px; opacity:1}
        to {height: 125px; margin-top: 0px; opacity:1}

    @keyframes flyin
        from {position: relative; left 4500px; opacity: 1;}
        to {position: relative; left 1650px; opacity:1;}

    .subtitle
        background #fff
        text-align center
        //animation: fadein 1s;
        height 50px

    lo
        display inline-block
        background-color white

    .mini
        color #000
        display inline-block
        text-decoration none

        &:hover
            color #1ac6ff

    li
        display inline-block
        margin 5px 2.5px 5px 2.5px
        background-color white
        opacity: 0;
        animation: flyin 1s;
        animation-timing-function: ease-out; 
        animation-fill-mode: forwards;
        animation-delay: 1.25s;
        
    .large
        color #1ac6ff
        padding-top 45px
        display inline-block
        height 115 px;
        width 115 px;
        text-decoration none

        &:hover
            background-color #1ac6ff
            color #fff

     .large-blue
        background-color #1ac6ff
        color #fff
        padding-top 45px
        display inline-block
        height 115px
        width 115px
        text-decoration none

     .main-content
        margin 50px auto
        max-width 600px
        color #000

        p
            line-height 1.6
            margin-bottom 1.7em

    .footer
        margin 50px auto
        max-width 600px
        border-top 1px solid #444
        padding 20px 0

        p
            color #444
            font-size 12px
